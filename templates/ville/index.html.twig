{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1>Villes</h1>

    <table class="table table-striped table-hover mb-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.nomVille }}</td>
                <td>
                    <a href="{{ path('ville_show', {'id': ville.id}) }}" class="btn btn-secondary mx-3">afficher</a>
                    <a href="{{ path('ville_edit', {'id': ville.id}) }}" class="btn btn-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de données récupérées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ville_new') }}" class="btn btn-success">Ajouter Nouveau</a>
{% endblock %}
