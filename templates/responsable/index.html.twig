{% extends 'base.html.twig' %}

{% block title %}Responsable index{% endblock %}

{% block body %}
    <h1>Responsables</h1>

    <table class="table table-striped table-hover mb-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td>{{ responsable.id }}</td>
                <td>{{ responsable.nom }}</td>
                <td>{{ responsable.prenom }}</td>
                <td>
                    <a href="{{ path('responsable_show', {'id': responsable.id}) }}" class="btn btn-secondary mx-3">afficher</a>
                    <a href="{{ path('responsable_edit', {'id': responsable.id}) }}" class="btn btn-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas de données récupérées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('responsable_new') }}" class="btn btn-success">Ajouter Nouveau</a>
{% endblock %}
