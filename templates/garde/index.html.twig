{% extends 'base.html.twig' %}

{% block title %}Gardes{% endblock %}

{% block body %}
    <h1>Gardes</h1>

    <table class="table table-striped table-hover mb-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_garde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for garde in gardes %}
            <tr>
                <td>{{ garde.id }}</td>
                <td>{{ garde.nomGarde }}</td>
                <td>
                    <a href="{{ path('garde_show', {'id': garde.id}) }}" class="btn btn-secondary mx-3">afficher</a>
                    <a href="{{ path('garde_edit', {'id': garde.id}) }}" class="btn btn-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de données récupérées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="utf-pagination-container">
        <nav class="pagination">
            {{ knp_pagination_render(gardes) }}
        </nav>
    </div>

    <a href="{{ path('garde_new') }}" class="btn btn-success">Ajouter Nouveau</a>
{% endblock %}
