{% extends 'base.html.twig' %}

{% block title %}Region index{% endblock %}

{% block body %}
    <h1>Regions</h1>

    <table class="table table-striped table-hover mb-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_reg</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.nomReg }}</td>
                <td>
                    <a href="{{ path('region_show', {'id': region.id}) }}" class="btn btn-secondary mx-3">afficher</a>
                    <a href="{{ path('region_edit', {'id': region.id}) }}" class="btn btn-primary">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de données récupérées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('region_new') }}" class="btn btn-success">Ajouter Nouveau</a>
{% endblock %}
